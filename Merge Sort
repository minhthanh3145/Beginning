#include<iostream>

using namespace std;

void MergeSort(int a[],int iBegin,int iEnd);
void Merge(int a[],int iBegin,int iMiddle,int iEnd);

int main()
{
    cout<<" This program uses Merge Sort method to sort an array "<<endl;
    cout<<" -----------------------o0o---------------------------"<<endl;
    int n;
    cout<<" Input the size of the array :";
    cin>>n;
    int *arr;
    arr=new int [n];

    for(int i=0;i<n;i++)
    {
        cout<<" Input element "<<i+1<<" : ";
        cin>>arr[i];
    }

    MergeSort(arr,0,n);

    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }

    delete[]arr;

    return 0;
}

void MergeSort(int a[],int iBegin,int iEnd)
{
    if(iEnd-iBegin<2)
        return;

    int iMiddle=(iBegin+iEnd)/2;
    MergeSort(a,iBegin,iMiddle);
    MergeSort(a,iMiddle+1,iEnd);
    Merge(a,iBegin,iMiddle,iEnd);
}
void Merge(int a[],int iBegin,int iMiddle,int iEnd)
{
    int n1=(iMiddle-iBegin)+1;
    int n2=iEnd-iMiddle;

    int arr1[n1],arr2[n2];

    int i,j,k;

    for(i=0;i<n1;i++)
    {
        arr1[i]=a[iBegin+i];
    }

    for(j=0;j<n2;j++)
    {
        arr2[j]=a[iMiddle+j+1];
    }

    i=0;
    j=0;
    k=iBegin;

    while(i<n1 && j<n2)
    {
        if(arr1[i]<=arr2[j])
        {
            a[k]=arr1[i];
            i++;
        }
        else
        {
            a[k]=arr2[j];
            j++;
        }
        k++;
    }

    while(i<n1)
    {
        a[k]=arr1[i];
        k++;i++;
    }
    while(j<n2)
    {
        a[k]=arr2[j];
        k++;j++;
    }

}



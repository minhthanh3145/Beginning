#include<iostream>

using namespace std;

void Merge(int*arr,int low,int high,int mid);

void mergeSort(int*arr,int low,int high)
{
    if(high-low<1)
        return;
    int mid=(high+low)/2;
    mergeSort(arr,low,mid);
    mergeSort(arr,mid+1,high);
    Merge(arr,low,high,mid);
}

void Merge(int*arr,int low,int high,int mid)
{

    int temp[high+1];
    for(int i=low;i<=high;i++)
    {
        temp[i]=arr[i];
    }

    int i=low;
    int j=mid+1;
    int k=low;

    while(i<=mid && j<=high)
    {
        if(temp[i]<=temp[j])
        {
            arr[k]=temp[i];
            i++;
        }
        else
        {
            arr[k]=temp[j];
            j++;
        }
        k++;
    }
    while(i<=mid)
    {
        arr[k]=temp[i];i++;k++;
    }
    while(j<=high)
    {
        arr[k]=temp[j];i++;j++;
    }

}

int main()
{
    cout<<" This program uses Merge Sort method to sort an array "<<endl;
    cout<<" -----------------------o0o---------------------------"<<endl;
    int*arr;
    int n;
    cout<<" How many elements : ";
    cin>>n;
    arr=new int[n];

    for(int i=0;i<n;i++)
    {
        cout<<" Input element ["<<i<<"] : ";
        cin>>arr[i];
    }
    mergeSort(arr,0,n-1);
    cout<<" Sorted array : ";
    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }

    delete[]arr;
    return 0;
}

